<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/TOAST_SUCCESS"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#43A047"
        android:text="TOAST_SUCCESS"
        app:cornerRadius="6dp" />

    <Button
        android:id="@+id/TOAST_ERROR"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#D81B1B"
        android:text="TOAST_ERROR"
        app:cornerRadius="6dp" />

    <Button
        android:id="@+id/TOAST_WARNING"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFB300"
        android:text="TOAST_WARNING"
        app:cornerRadius="6dp" />

    <Button
        android:id="@+id/TOAST_INFO"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#AB47BC"
        android:text="TOAST_INFO"
        app:cornerRadius="6dp" />

    <Button
        android:id="@+id/TOAST_DELETE"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="TOAST_DELETE"
        app:cornerRadius="6dp" />
</LinearLayout>